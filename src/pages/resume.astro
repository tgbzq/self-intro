<script is:inline>
    // 简单的 Tab 切换逻辑
    function openTab(evt, tabName) {
        // 1. 隐藏所有内容
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tab-pane");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].classList.remove("d-block");
            tabcontent[i].classList.add("d-none");
        }

        // 2. 取消所有按钮的激活状态
        tablinks = document.getElementsByClassName("tab-btn");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].classList.remove("active");
        }

        // 3. 显示当前点击的内容，并激活按钮
        document.getElementById(tabName).classList.remove("d-none");
        document.getElementById(tabName).classList.add("d-block");
        evt.currentTarget.classList.add("active");
    }
</script>

<style>
    /* 模拟 Win98 的 Tab 样式 */
    .tabs-header {
        display: flex;
        margin-bottom: -2px; /* 让按钮压在内容盒子上 */
        padding-left: 2px;
        position: relative;
        z-index: 10;
    }

    .tab-btn {
        background: var(--win-gray);
        border: 1px solid white;
        border-bottom: none;
        border-right-color: black;
        margin-right: 2px;
        padding: 4px 12px;
        border-radius: 3px 3px 0 0;
        position: relative;
        top: 2px; /* 未选中时沉下去一点 */
        font-size: 0.9rem;
    }

    /* 选中的 Tab */
    .tab-btn.active {
        top: 0px; /* 弹起来 */
        border-bottom: 2px solid var(--win-gray); /* 遮住下面盒子的边框 */
        padding-bottom: 6px;
        z-index: 20;
    }

    /* 内容盒子 */
    .tabs-content-box {
        background: var(--win-gray);
        border: 2px solid;
        border-color: white black black white; /* 凸起效果 */
        padding: 20px;
        min-height: 300px;
        position: relative;
        z-index: 5;
    }

    /* 进度条 */
    .win98-progress {
        height: 16px;
        background: white;
        border: 1px solid black;
        border-radius: 0;
        box-shadow: inset 1px 1px 0 #888;
    }
    .win98-progress .progress-bar {
        background-color: #000080; /* Win98 经典深蓝条 */
    }

    .inset-border {
        border: 2px inset #fff;
    }
    
    .dashed {
        border-top: 1px dashed #999;
    }
</style>